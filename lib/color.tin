#var {C.FG.MAGENTA}         {\e[35m};
#var {C.FG.CYAN}            {\e[36m};
#var {C.FG.LIGHT_GRAY}      {\e[37m};

#var {C.FG.DEFAULT}         {\e[39m};

#var {C.BG.BLACK}           {\e[40m};
