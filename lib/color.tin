#var {C.BG.YELLOW}          {\e[43m};
#var {C.BG.BLUE}            {\e[44m};
#var {C.BG.MAGENTA}         {\e[45m};
#var {C.BG.CYAN}            {\e[46m};
#var {C.BG.LIGHT_GRAY}      {\e[47m};

#var {C.BG.DEFAULT}         {\e[49m};

#var {C.FG.DARK_GRAY}       {\e[90m};
#var {C.FG.LIGHT_RED}       {\e[91m};
#var {C.FG.LIGHT_GREEN}     {\e[92m};
