#nop VSoF;

/*
    Basic console bindings for modifying the text display. This method of color
    binding uses the colors configured in the terminal emulator. In contrast,
    using the <xyz> and <XYZ> color codes provided by tintin is more explicit
    and does not use the colors configured by the terminal emulator.
*/

#var {C.RESET}              {\e[0m};
#var {C.BOLD}               {\e[1m};
#var {C.DIM}                {\e[2m};

#var {C.UNDERLINE}          {\e[4m};
#var {C.BLINK}              {\e[5m};

#var {C.REVERSE}            {\e[7m};
#var {C.HIDDEN}             {\e[8m};
#var {C.STRIKEOUT}          {\e[9m};

#var {C.BOLD_OFF}           {\e[21m};
#var {C.DIM_OFF}            {\e[22m};
#var {C.UNDERLINE_OFF}      {\e[24m};
#var {C.BLINK_OFF}          {\e[25m};
#var {C.REVERSE_OFF}        {\e[27m};
#var {C.HIDDEN_OFF}         {\e[28m};
#var {C.STRIKEOUT_OFF}      {\e[29m};

#var {C.FG.BLACK}           {\e[30m};
#var {C.FG.RED}             {\e[31m};
#var {C.FG.GREEN}           {\e[32m};
#var {C.FG.YELLOW}          {\e[33m};
